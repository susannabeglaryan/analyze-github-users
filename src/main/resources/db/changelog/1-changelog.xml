<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:pro="http://www.liquibase.org/xml/ns/pro" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1-1" author="susanna_beglaryan">
        <createTable tableName="user">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="user_pk" />
            </column>
            <column name="source_id" type="BIGINT"/>
            <column name="login" type="VARCHAR(255)"/>
            <column name="avatar_url" type="VARCHAR(255)"/>
            <column name="url" type="VARCHAR(255)"/>
            <column name="html_url" type="VARCHAR(255)"/>
            <column name="followers_url" type="VARCHAR(255)"/>
            <column name="following_url" type="VARCHAR(255)"/>
            <column name="name" type="VARCHAR(255)"/>
            <column name="company" type="VARCHAR(255)"/>
            <column name="location" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="public_repos" type="INTEGER"/>
            <column name="followers" type="INTEGER"/>
            <column name="following" type="INTEGER"/>
            <column name="profile_created_at" type="TIMESTAMP"/>
            <column name="total_private_repos" type="INTEGER"/>
            <column name="owned_private_repos" type="INTEGER"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
